# SQL Server with Windows AD Authentication Template
# Copy this file to .env and update with your settings

# Database type
DB_TYPE=sql server

# Server connection details
DB_SERVER=your-server.domain.com
DB_DATABASE=OMOP_CDM
DB_PORT=1433

# Windows Authentication (set to true to use Windows AD)
USE_WINDOWS_AUTH=true

# If using standard SQL auth instead, set USE_WINDOWS_AUTH=false and provide:
# DB_USER=your_username
# DB_PASSWORD=your_password

# Schema configuration
CDM_SCHEMA=dbo
VOCABULARY_SCHEMA=dbo
# RESULTS_SCHEMA=results

# JDBC driver location
JDBC_DRIVER_PATH=jdbc_drivers

# Output configuration
OUTPUT_FOLDER=output